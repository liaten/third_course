<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    a:id="@+id/mainLayout"
    xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        a:layout_width="match_parent"
        a:layout_height="wrap_content" >
        <LinearLayout
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:orientation="horizontal"
            a:padding="10dp"
            a:gravity="top"
            >
            <TextView
                a:id="@+id/company_id_text"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:textSize="40sp"
                a:fontFamily="@font/roboto_regular"
                a:textStyle="bold"
                a:textColor="#0c2d43"
                a:text="1"
                />
            <LinearLayout
                a:layout_width="0dp"
                a:layout_weight="1"
                a:layout_height="wrap_content"
                a:orientation="vertical"
                a:layout_marginStart="10dp"
                >
                <TextView
                    a:id="@+id/company_text"
                    a:layout_width="wrap_content"
                    a:layout_height="wrap_content"
                    a:textSize="15sp"
                    a:fontFamily="@font/roboto_regular"
                    a:textStyle="normal"
                    a:textColor="#0c2d43"
                    a:text="apple"
                    />
                <TextView
                    a:id="@+id/founder_text"
                    a:layout_width="wrap_content"
                    a:layout_height="wrap_content"
                    a:textSize="15sp"
                    a:fontFamily="@font/roboto_regular"
                    a:textStyle="normal"
                    a:textColor="#28456d"
                    a:text="steve wozniak"
                    a:layout_marginVertical="10dp"
                    />
                <TextView
                    a:id="@+id/product_text"
                    a:layout_width="wrap_content"
                    a:layout_height="wrap_content"
                    a:textSize="15sp"
                    a:fontFamily="@font/roboto_regular"
                    a:textStyle="normal"
                    a:textColor="#18556d"
                    a:text="mac"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>