<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:orientation="vertical"
    a:gravity="top"

    >

    <TextView
        a:id="@+id/textView"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:text="@string/xml_head"
        a:layout_marginTop="15dp"
        a:layout_marginHorizontal="15dp"
        a:layout_marginBottom="0dp"
        a:fontFamily="@font/roboto"
        a:textSize="15sp"/>

    <androidx.recyclerview.widget.RecyclerView
        a:layout_width="match_parent"
        a:layout_height="0dp"
        a:layout_margin="15dp"
        a:layout_weight="1"
        a:fontFamily="@font/roboto"
        a:textSize="15sp" />

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal">

        <Button
            a:id="@+id/push_button"
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:layout_marginHorizontal="15dp"
            a:layout_marginBottom="15dp"
            a:fontFamily="@font/roboto"
            a:text="@string/save_file"
            a:textSize="15sp" />
        <Button
            a:id="@+id/edit_param_button"
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:layout_marginEnd="15dp"
            a:text="@string/change_parameter"
            a:fontFamily="@font/roboto"
            a:textSize="15sp"

            />
    </LinearLayout>
</LinearLayout>